{
  "expo": {
    "name": "SmallBizSales",
    "slug": "SmallBizSales",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "SmallBizSales needs microphone access to record audio for speech recognition.",
        "NSSpeechRecognitionUsageDescription": "SmallBizSales needs speech recognition to convert your voice to text.",
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": [
          "remote-notification"
        ]
      },
      "bundleIdentifier": "com.manh2606.SmartBizSales"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.manh2606.SmartBizSales",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.POST_NOTIFICATIONS"
      ],
      "googleServicesFile": "./google-services.json"
    },
    "scheme": "posapp",
    "plugins": [
      [
        "expo-document-picker",
        {
          "iCloudContainerEnvironment": "Production"
        }
      ],
      "expo-web-browser",
      "expo-font",
      "expo-speech-recognition",
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#1890ff",
          "sounds": [],
          "defaultChannel": "default"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "6e2bd929-0701-48c9-899d-49778be8e9e0"
      }
    },
    "notification": {
      "icon": "./assets/icon.png",
      "color": "#1890ff"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/6e2bd929-0701-48c9-899d-49778be8e9e0"
    }
  }
}
