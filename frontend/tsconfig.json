{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,            // Cho phép file .js/.jsx tồn tại
    "skipLibCheck": true,       // Bỏ qua check lib ngoài
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,             // Bật chế độ nghiêm khắc (nên để true)
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"          // Dành cho React 17+
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
